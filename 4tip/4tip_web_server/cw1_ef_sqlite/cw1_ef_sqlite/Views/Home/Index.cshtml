@model List<Book>
<h1>Przeglądaj rekordy</h1>
<table class="table table-striped">
    <thead>
    <th>Lp</th>
    <th>Tytuł</th>
    <th>Autor</th>
    <th>rok wydania</th>
    <th> ---- </th>

    </thead>
    <tbody>
    @{ int lp = 0;}
    @foreach (var book in Model) {
        lp++;
        <tr>
            <td>@lp</td>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Year</td>
            <td>
                <a class="btn btn-danger" 
                asp-action="DeleteBook" 
                asp-route-id="@book.Id">Delete</a>
                 <a class="btn btn-secondary" 
                asp-action="UpdateBook" 
                asp-route-id="@book.Id">Zmień</a>
            </td>
        </tr>
    }
    </tbody>
</table>

