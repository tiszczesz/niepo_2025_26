@model NwdVieModel
@{
    ViewData["Title"] = "Obliczanie NWD";
}

<h2>Obliczanie NWD</h2>
<form method="post" asp-action="Index">
    <div class="form-group m-2">
        <label asp-for="NumberA">Liczba 1:</label>
        <input type="number" class="form-control" asp-for="NumberA" required />
    </div>
    <div class="form-group m-2">
        <label asp-for="NumberB">Liczba 2:</label>
        <input type="number" class="form-control" asp-for="NumberB" required />
    </div>
    <div class="form-group m-2">
        <label>Wybór metody</label>
        <select asp-for="MethodCalc" class="form-control" >
            <option value="rek">Metoda rekurncyjna</option>
            <option value="iter">Metoda iteracyjna</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Oblicz NWD</button>
</form>

@if (ViewBag.Result != null) {
    <div class="alert alert-success m-2">
        <strong>Wynik:</strong> @ViewBag.Result
    </div>
}

