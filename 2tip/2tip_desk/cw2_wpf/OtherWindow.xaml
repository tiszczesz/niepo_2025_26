<Window x:Class="cw2_wpf.OtherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cw2_wpf"
        mc:Ignorable="d"
        Title="OtherWindow" Height="450" Width="800">
    <Canvas Background="LightPink">
        <Label Foreground="BlueViolet" FontSize="48" 
               Canvas.Left="40" 
               Canvas.Top="40">
            To jest okienko OTHER WINDOW
        </Label>
        <Button Canvas.Left="100" 
                Canvas.Top="200" 
                Background="Magenta"
                Click="ButtonBase_OnClick"
                Padding="60 10" >Zamknij</Button>
    </Canvas>
</Window>
